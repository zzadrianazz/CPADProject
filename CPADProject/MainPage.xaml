<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CPADProject.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label x:Name="menulbl" Text="Traffic Escape" TextColor="LimeGreen" FontSize="30" 
                   VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>

            <Button x:Name="startBtn" Text="Start Game" BackgroundColor="Gold" 
                    HeightRequest="70" WidthRequest="300" Margin="10"/>
            <Button x:Name="carBtn" Text="Cusomize Car" BackgroundColor="Gold" 
        HeightRequest="70" WidthRequest="300" Margin="10"/>
            <Button x:Name="statsBtn" Text="Check Stats" BackgroundColor="Gold" 
        HeightRequest="70" WidthRequest="300" Margin="10"/>
            <Button x:Name="uploadBtn" Text="Upload Your Own Car" BackgroundColor="Gold" 
        HeightRequest="70" WidthRequest="300" Margin="10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
